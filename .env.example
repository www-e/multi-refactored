# === APP CONFIGURATION (Next.js) ===
NODE_ENV=production
# URL of the website itself
NEXTAUTH_URL=https://agentic.navaia.sa/
NEXT_PUBLIC_SITE_URL=https://agentic.navaia.sa/

# === SECURITY ===
# Must match in Frontend and Backend
JWT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXTAUTH_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxx



# Old (Risky)
# BACKEND_URL=http://backend:8000
# DB_URL=postgresql://navaia:navaia@postgres:5432/navaia


# === BACKEND CONNECTION ===
# 1. INTERNAL (Server-to-Server): Used by NextAuth to talk to Docker
#    MUST be http://127.0.0.1:8000 (No trailing slash, no /api)
BACKEND_URL=http://agentic_portal_backend:8000

# 2. EXTERNAL (Client-to-Server): Used by the Browser
#    MUST be the public HTTPS domain
NEXT_PUBLIC_BACKEND_URL=https://agentic.navaia.sa/

# === DATABASE (Docker Backend) ===
# Connect to the service name 'postgres', not localhost
DB_URL=postgresql://navaia:navaia@agentic_portal_db:5432/navaia

# === ELEVENLABS & SERVICES ===
ELEVENLABS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
ELEVENLABS_HMAC_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
ELEVENLABS_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
ELEVENLABS_SUPPORT_AGENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
ELEVENLABS_SALES_AGENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Public keys for frontend
NEXT_PUBLIC_ELEVENLABS_SUPPORT_AGENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_ELEVENLABS_SALES_AGENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# === OTHER ===
TENANT_ID=demo-tenant
PYTHONPATH=/app

PORT=3001
AUTH_TRUST_HOST=true